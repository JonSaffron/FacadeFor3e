<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net48;net6.0-windows</TargetFrameworks>
    <PackageId>FacadeFor3E</PackageId>
    <Authors>J Saffron Consulting</Authors>
    <Product>FacadeFor3E</Product>
    <Version>2.3.0</Version>
    <Description>A library that makes using the 3E transaction service a little easier.</Description>
    <Copyright>Copyright © J Saffron Consulting Ltd 2014 - 2023</Copyright>
    <RepositoryUrl>https://github.com/JonSaffron/FacadeFor3e</RepositoryUrl>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>A library to help you build apps that use Elite 3E</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>Elite;3E;TransactionService</PackageTags>
    <AssemblyVersion>$(VersionPrefix)</AssemblyVersion>
    <FileVersion>$(VersionPrefix)</FileVersion>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2022.3.1">
        <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="NLog" Version="[5.0,6.0)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0-windows'">
    <PackageReference Include="System.ServiceModel.Http" Version="[6.0,7.0)" />
    <PackageReference Include="System.ServiceModel.Security" Version="[6.0,7.0)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net6.0-windows'">
    <PackageReference Include="System.ServiceModel.Http" Version="[4.10,5.0)" />
    <PackageReference Include="System.ServiceModel.Security" Version="[4.10,5.0)" />
  </ItemGroup>

  <ItemGroup>
    <WCFMetadata Include="Connected Services" />
  </ItemGroup>

	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>FacadeFor3e.Tests</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
    <None Include="ReleaseHistory.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
